{% extends 'layout.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('Css/usuarios.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block content %}
    {% if usuario.id %}
        <h1>Hola {{ usuario.nombre }} {{ usuario.apellidos }}, estas editando tu perfil</h1>
    {% else %}
        <h1>Creaci√≥n de un nuevo usuario</h1>
    {% endif %}
    <div class="cajaForm">
        {{ form_start(form) }}
        {{ form_widget(form) }}
    </div>

    <button type="submit" class="btnActivar">
        {% if usuario.id %}
            <i class="fa fa-check"></i> Guardar cambios
        {% else %}
            <i class="fa fa-plus"></i> Crear nuevo Usuario
        {% endif %}
    </button>
    <a href="{{ path('usuarios_listar') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver al listado</a>
    {{ form_end(form) }}
{% endblock %}