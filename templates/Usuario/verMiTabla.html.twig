{% extends 'layout.html.twig' %}
{% block stylesheets %}
{% endblock %}

{% block content %}
    <h1>{{ app.user.miTabla}}</h1>
    {% for dia in app.user.miTabla.dias %}
        <p>{{ dia }}</p>
        {% for ejercicio in dia.ejercicios %}
            <ul>
            <li>{{ ejercicio }} <a href="{{ path('series_nueva',{'usuario':app.user.id,'ejercicio':ejercicio.id}) }}" class="">Empezar el ejercicio</a></li>
            </ul>
        {% endfor %}
    {% endfor %}

    <div class="botonera">
        <a href="{{ path('tablas_listar') }}" class="btnVolver">Cambiar de tabla</a>
    </div>



{% endblock %}