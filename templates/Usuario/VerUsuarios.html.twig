{% extends 'layout.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('Css/usuarios.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block content %}
    <div class="cuerpo">
        <h1> Listado de usuarios por apellidos</h1>
        <div class="cajatabla">
            <table>
                <thead>
                <tr>
                    <th>Foto</th>
                    <th>DNI</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Tel√©fono</th>
                    <th>Fecha Nacimiento</th>
                    <th>Correo</th>
                    <th>Activado</th>
                </tr>
                </thead>
                <tbody>
                {%  for usuario in usuarios %}
                    <tr class="filaUsuarios">
                        <td>
                            <div class="huecoFoto">
                                {% if usuario.foto %}
                                <img class="fotoPersona" alt="" src={{ usuario.foto }} >
                                {% else %}
                                <img src="{{ asset('Imagenes/fotoPerfil.webp') }}" alt="">
                                {% endif %}
                            </div>
                        </td>
                        <td>{{ usuario.dni }}</td>
                        <td>{{ usuario.nombre }}</td>
                        <td>{{ usuario.apellidos }}</td>
                        <td>{{ usuario.telefono }}</td>
                        <td>{{ usuario.fechaNacimiento|date }}</td>
                        <td>{{ usuario.correo}} </td>
                        <td class="test">
                            <div class="cajaBoton">
                            {% if usuario.activado %}
                            <button class="btnDesactivar">Desactivar</button>
                            {% else %}
                            <button class="btnActivar">Activar</button>
                            {% endif %}
                            </div>
                        </td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">No hay Usuarios</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}