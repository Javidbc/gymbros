{% extends 'layout.html.twig' %}
{% block stylesheets %}
{% endblock %}

{% block content %}
    {% if ejercicio.id %}
        <h1>Editando {{ ejercicio.nombre }}</h1>
    {% else %}
        <h1>Creando un nuevo ejercicio</h1>
    {% endif %}
    <div class="cajaForm">
        {{ form_start(form) }}
        {{ form_widget(form) }}
    </div>
    <div class="botonera">
        <button type="submit" class="btnConfirmar">
            {% if ejercicio.id %}
                <i class="fa fa-check"></i> Guardar cambios
            {% else %}
                <i class="fa fa-plus"></i> Crear nuevo Ejercicio
            {% endif %}
        </button>
        <a href="{{ path('ejercicios_listar') }}" class="btnVolver"><i class="fa fa-arrow-left"></i> Volver al listado</a>
        {{ form_end(form) }}
    </div>

{% endblock %}