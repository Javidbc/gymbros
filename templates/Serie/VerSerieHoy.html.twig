{% extends 'layout.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('Css/usuarios.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block content %}
    <div class="cuerpo">
        {% if series %}
        <h1> Series que has hecho hoy del ejercicio {{ series[0].ejercicio }}</h1>
        <div class="cajatabla">
            <table>
                <thead>
                <tr>
                    <th>Repeticiones</th>
                    <th>Peso</th>
                    <th>numero de serie</th>
                </tr>
                </thead>
                <tbody>
                {%  for serie in series %}
                    <tr class="filaUsuarios">
                        <td>{{ serie.repeticiones }}</td>
                        <td>{{ serie.peso }}</td>
                        <td>{{ serie.numSerie }}</td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No hay reservas</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <h2>¡Aún no has hecho ninguna serie hoy!</h2>
        {% endif %}
        <div class="botonera">
            <a href="{{ path('usuarios_miTabla',{'tabla':app.user.miTabla,'id':app.user}) }}" class="btnVolver"><i class="fa fa-arrow-left"></i> Volver al listado</a>

        </div>

    </div>
{% endblock %}