{% extends 'layout.html.twig' %}
{% block stylesheets %}
{% endblock %}

{% block content %}
    <h1>Eliminar la tabla {{ tabla.nombreTabla}}?</h1>

    <div class="alert alert-danger">
        ¿Estás seguro de borrar esta tabla?
    </div>
    <form method="post">
        <button type="submit" name="confirmar" value="si" class="btnEliminar"><i class="fa fa-trash-alt"></i> Eliminar definitivamente</button>
        <a href="{{ path('tablas_listar') }}" class="btnVolver"><i class="fa fa-arrow-left"></i> Volver al listado</a>
    </form>
{% endblock %}